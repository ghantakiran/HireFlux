# E2E Testing Environment Variables
# Copy this file to .env.local for local E2E testing

# =====================================================
# Application URLs
# =====================================================

# Frontend URL for Playwright tests
PLAYWRIGHT_BASE_URL=http://localhost:3000

# Backend API URL
NEXT_PUBLIC_API_URL=http://localhost:8000

# =====================================================
# Test User Credentials
# =====================================================

# Default test user (created in global-setup.ts)
E2E_TEST_EMAIL=test@example.com
E2E_TEST_PASSWORD=TestPassword123!

# Admin test user (for admin-only tests)
E2E_ADMIN_EMAIL=admin@example.com
E2E_ADMIN_PASSWORD=AdminPassword123!

# =====================================================
# Database (for E2E environment)
# =====================================================

# PostgreSQL connection string
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/hireflux_e2e

# =====================================================
# Redis (for E2E environment)
# =====================================================

# Redis connection string
REDIS_URL=redis://localhost:6379

# =====================================================
# External Services (Test Keys)
# =====================================================

# OpenAI API Key (use test account with limits)
OPENAI_API_KEY=sk-test-key-for-e2e-testing

# Pinecone API Key
PINECONE_API_KEY=test-pinecone-key
PINECONE_ENVIRONMENT=test
PINECONE_INDEX_NAME=hireflux-e2e

# Stripe API Key (use test mode)
STRIPE_SECRET_KEY=sk_test_51...
STRIPE_PUBLISHABLE_KEY=pk_test_51...
STRIPE_WEBHOOK_SECRET=whsec_test...

# OAuth Credentials (test applications)
GOOGLE_CLIENT_ID=test-google-client-id.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=test-google-client-secret

LINKEDIN_CLIENT_ID=test-linkedin-client-id
LINKEDIN_CLIENT_SECRET=test-linkedin-client-secret

# =====================================================
# Email Service (Test Mode)
# =====================================================

# Resend API Key (use test mode or mock)
RESEND_API_KEY=re_test_key
RESEND_FROM_EMAIL=noreply@test.hireflux.com

# =====================================================
# Feature Flags
# =====================================================

# Enable/disable features for testing
ENABLE_OAUTH=true
ENABLE_AUTO_APPLY=true
ENABLE_INTERVIEW_BUDDY=true
ENABLE_ANALYTICS=true

# =====================================================
# Testing Configuration
# =====================================================

# Skip external API calls (use mocks)
MOCK_EXTERNAL_APIS=true

# Disable rate limiting for tests
DISABLE_RATE_LIMITING=true

# Testing mode flag
TESTING=true
NODE_ENV=test

# Playwright configuration
PLAYWRIGHT_WORKERS=4
PLAYWRIGHT_TIMEOUT=30000
PLAYWRIGHT_RETRIES=2

# Visual regression testing
PLAYWRIGHT_UPDATE_SNAPSHOTS=false

# =====================================================
# Logging
# =====================================================

# Log level for debugging
LOG_LEVEL=info

# Enable detailed API logs
DEBUG_API_CALLS=false

# =====================================================
# Security (Test Environment)
# =====================================================

# JWT Secret (use different from production)
JWT_SECRET_KEY=test-jwt-secret-key-for-e2e-tests-only
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=1440
JWT_REFRESH_TOKEN_EXPIRE_DAYS=30

# =====================================================
# Test Data Seeding
# =====================================================

# Seed database with test data on startup
SEED_TEST_DATA=true

# Number of test jobs to create
TEST_JOBS_COUNT=50

# Number of test applications to create
TEST_APPLICATIONS_COUNT=20
