# Environment
ENVIRONMENT=development  # development, staging, production

# Application
APP_NAME=HireFlux
APP_VERSION=1.0.0
API_V1_PREFIX=/api/v1
SECRET_KEY=your-secret-key-here-change-in-production
DEBUG=True

# Database
DATABASE_URL=postgresql://user:password@localhost:5432/hireflux
DATABASE_POOL_SIZE=20
DATABASE_MAX_OVERFLOW=10

# Redis
REDIS_URL=redis://localhost:6379/0
REDIS_MAX_CONNECTIONS=50

# JWT
JWT_SECRET_KEY=your-jwt-secret-key-here
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=60
REFRESH_TOKEN_EXPIRE_DAYS=30

# OpenAI
OPENAI_API_KEY=sk-your-openai-api-key
OPENAI_MODEL=gpt-4-turbo-preview
OPENAI_EMBEDDINGS_MODEL=text-embedding-ada-002
OPENAI_MAX_TOKENS=4000
OPENAI_TEMPERATURE=0.7

# Pinecone
PINECONE_API_KEY=your-pinecone-api-key
PINECONE_ENVIRONMENT=us-west1-gcp
PINECONE_INDEX_NAME_JOBS=job-embeddings
PINECONE_INDEX_NAME_USERS=user-skills-embeddings

# Stripe
STRIPE_SECRET_KEY=sk_test_your-stripe-secret-key
STRIPE_PUBLISHABLE_KEY=pk_test_your-stripe-publishable-key
STRIPE_WEBHOOK_SECRET=whsec_your-webhook-secret
STRIPE_PLUS_PRICE_ID=price_plus_monthly
STRIPE_PRO_PRICE_ID=price_pro_monthly

# Email
RESEND_API_KEY=re_your-resend-api-key
FROM_EMAIL=noreply@hireflux.com
FROM_NAME=HireFlux

# AWS S3 (or Supabase Storage)
AWS_ACCESS_KEY_ID=your-access-key
AWS_SECRET_ACCESS_KEY=your-secret-key
AWS_S3_BUCKET=hireflux-uploads
AWS_REGION=us-east-1

# Job Board APIs
GREENHOUSE_API_KEY=your-greenhouse-api-key
LEVER_API_KEY=your-lever-api-key

# OAuth
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret
LINKEDIN_CLIENT_ID=your-linkedin-client-id
LINKEDIN_CLIENT_SECRET=your-linkedin-client-secret

# Sentry
SENTRY_DSN=https://your-sentry-dsn

# CORS
CORS_ORIGINS=["http://localhost:3000", "https://app.hireflux.com"]

# Rate Limiting
RATE_LIMIT_PER_MINUTE=60
RATE_LIMIT_PER_HOUR=1000

# Workers
RQ_REDIS_URL=redis://localhost:6379/1
